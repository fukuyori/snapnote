<Window x:Class="SnapNoteStudio.Views.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="テキストを入力"
        Width="380"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" 
                   Text="テキストを入力してください:"
                   Margin="0,0,0,8"/>
        
        <TextBox x:Name="InputTextBox"
                 Grid.Row="1"
                 Height="32"
                 Padding="8,4"
                 FontSize="14"
                 VerticalContentAlignment="Center"/>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
            <TextBlock Text="フォントサイズ:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="FontSizeComboBox" Width="80" Height="28" VerticalContentAlignment="Center">
                <ComboBoxItem Content="12" Tag="12"/>
                <ComboBoxItem Content="14" Tag="14"/>
                <ComboBoxItem Content="16" Tag="16"/>
                <ComboBoxItem Content="18" Tag="18" IsSelected="True"/>
                <ComboBoxItem Content="24" Tag="24"/>
                <ComboBoxItem Content="32" Tag="32"/>
                <ComboBoxItem Content="48" Tag="48"/>
                <ComboBoxItem Content="64" Tag="64"/>
            </ComboBox>
        </StackPanel>
        
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="キャンセル" 
                    Width="80"
                    Height="28"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Content="OK" 
                    Width="80"
                    Height="28"
                    Click="OK_Click"
                    IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
