<Window x:Class="SnapNoteStudio.Views.ResizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Resize"
        Width="320"
        Height="220"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock x:Name="InstructionText" Grid.Row="0" Grid.ColumnSpan="3" 
                   Text="Enter new size:"
                   Margin="0,0,0,12" FontWeight="Bold"/>
        
        <TextBlock x:Name="WidthLabel" Grid.Row="1" Grid.Column="0" Text="Width:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="WidthTextBox" Grid.Row="1" Grid.Column="1" 
                 Height="28" Padding="4" Margin="0,0,0,8"
                 TextChanged="WidthTextBox_TextChanged"/>
        <TextBlock Grid.Row="1" Grid.Column="2" Text="px" VerticalAlignment="Center" Margin="8,0,0,8"/>
        
        <TextBlock x:Name="HeightLabel" Grid.Row="2" Grid.Column="0" Text="Height:" VerticalAlignment="Center" Margin="0,0,8,8"/>
        <TextBox x:Name="HeightTextBox" Grid.Row="2" Grid.Column="1" 
                 Height="28" Padding="4" Margin="0,0,0,8"
                 TextChanged="HeightTextBox_TextChanged"/>
        <TextBlock Grid.Row="2" Grid.Column="2" Text="px" VerticalAlignment="Center" Margin="8,0,0,8"/>
        
        <CheckBox x:Name="KeepAspectRatioCheckBox" Grid.Row="3" Grid.ColumnSpan="3"
                  Content="Keep aspect ratio" IsChecked="True" Margin="0,4,0,8"/>
        
        <TextBlock x:Name="OriginalSizeText" Grid.Row="4" Grid.ColumnSpan="3"
                   Foreground="Gray" FontSize="11"/>
        
        <StackPanel Grid.Row="5" Grid.ColumnSpan="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="28" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button x:Name="OKButton" Content="OK" Width="80" Height="28" Click="OK_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
