<Window x:Class="SnapNoteStudio.Views.SettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="420"
        Height="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#2D2D30">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="28"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock x:Name="TitleText" Grid.Row="0" Text="Settings" FontSize="18" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,20"/>
        
        <!-- Language Setting -->
        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="LanguageLabel" Grid.Column="0" Text="Language:"/>
            <ComboBox x:Name="LanguageComboBox" Grid.Column="1" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="English" Tag="English"/>
                <ComboBoxItem Content="日本語" Tag="Japanese"/>
            </ComboBox>
        </Grid>
        
        <!-- Hotkey Setting -->
        <Grid Grid.Row="2" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="HotkeyLabel" Grid.Column="0" Text="Capture hotkey:"/>
            <ComboBox x:Name="HotkeyComboBox" Grid.Column="1"/>
        </Grid>
        
        <!-- Startup Setting -->
        <CheckBox x:Name="StartupCheckBox" Grid.Row="3" 
                  Content="Start with Windows" 
                  Margin="0,0,0,16"/>
        
        <!-- Default Settings -->
        <GroupBox x:Name="DefaultSettingsGroup" Grid.Row="4" Header="Default Settings" 
                  Foreground="#888888" BorderBrush="#555555" Margin="0,0,0,16">
            <StackPanel Margin="8">
                <Grid Margin="0,8,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="ThicknessLabel" Grid.Column="0" Text="Thickness:"/>
                    <Slider x:Name="DefaultStrokeSlider" Grid.Column="1" 
                            Minimum="1" Maximum="10" Value="3" 
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="DefaultStrokeText" Grid.Column="2" Text="3" 
                               HorizontalAlignment="Center"/>
                </Grid>
                
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="40"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="OpacityLabel" Grid.Column="0" Text="Opacity:"/>
                    <Slider x:Name="DefaultOpacitySlider" Grid.Column="1" 
                            Minimum="0.1" Maximum="1.0" Value="1.0" 
                            VerticalAlignment="Center"/>
                    <TextBlock x:Name="DefaultOpacityText" Grid.Column="2" Text="100%" 
                               HorizontalAlignment="Center"/>
                </Grid>
            </StackPanel>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="CancelButton" Content="Cancel" Width="90" Height="32" Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button x:Name="SaveButton" Content="Save" Width="90" Height="32" 
                    Background="#007ACC" Foreground="White"
                    Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
